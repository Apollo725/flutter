<div class="row">
  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <p>stats</p>
      </div>
    </div>
      <div class="panel panel-default">
        <div class="panel-body">
          <p>trends</p>
        </div>
      </div>
  </div>


  <div class="col-xs-6">
    <%= render 'components/post_form' %><br><br>
    <% for @p in @posts %>
      <div class="panel panel-default post-panel">
        <div class="panel-body row">
          <div class="col-sm-1">
            <img src="/myAvatar.png" class="rounded-img" height="50px" width="50px">
          </div>
          <div class="col-sm-11">
            <p class="post-title"><span class="post-owner"><%= User.find(@p.user_id).username %></span> <span class="post-creation"> - <%= @p.created_at.to_formatted_s(:short)  %></span></p>
            <p class="post-content"><%= @p.content %></p>
          </div>
          <div class="col-sm-12">
            <p class="post-link">
              <span class="glyphicon glyphicon-comment g-links"></span>
              <span class="glyphicon glyphicon-retweet g-links"></span>
              <span class="glyphicon glyphicon-heart g-links"></span>
              <span class="glyphicon glyphicon-option-horizontal g-links"></span>
              <a href="">View Conversation</a>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <p>about</p>
      </div>
    </div>
  </div>
</div>
