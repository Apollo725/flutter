
<div class="panel panel-default post-panel">
  <div class="panel-body row">
    <div class="col-sm-1">
      <img src="/myAvatar.png" class="rounded-img" height="25px" width="25px">
    </div>
    <div class="col-sm-11">
      <%= form_for(@newPost) do |f| %>

        <center>
          <div class="field" style="margin-left: 10px;">
            <%= f.text_field :content, autofocus: true, class: "form-control" %>
            <span type="button" class="btn btn-submit" style="float: right"><%= f.submit "Add Post", class: "btn btn-primary"%></span>
          </div>
        </center>

      <% end %>
    </div>
    </div>
  </div>




